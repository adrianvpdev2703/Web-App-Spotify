<%- include('../partials/header', { title: 'Administrar Canciones' }) %>

<div class="container mt-4">
  <h2 class="text-white">Canciones</h2>

  <!-- Insert -->
  <form id="form-insert-cancion" enctype="multipart/form-data">
    <h4 class="text-white">Crear Canción</h4>
    <div class="mb-3">
      <label class="form-label text-white">Nombre</label>
      <input type="text" name="nombre" class="form-control" required />
    </div>
    <div class="mb-3">
      <label class="form-label text-white">Álbum ID</label>
      <input type="number" name="album" class="form-control" required />
    </div>
    <div class="mb-3">
      <label class="form-label text-white">Imagen</label>
      <input type="file" name="imagen" class="form-control" />
    </div>
    <div class="mb-3">
      <label class="form-label text-white">Archivo MP3</label>
      <input type="file" name="archivo" class="form-control" />
    </div>
    <button class="btn btn-success">Crear</button>
  </form>

  <!-- PUT -->
  <form id="form-put-cancion" enctype="multipart/form-data" class="mt-3">
    <h4 class="text-white">Actualizar Canción (PUT)</h4>
    <div class="mb-3">
      <label class="form-label text-white">ID</label>
      <input type="number" id="put-cancion-id" class="form-control" required />
    </div>
    <div class="mb-3">
      <label class="form-label text-white">Nombre</label>
      <input type="text" name="nombre" class="form-control" required />
    </div>
    <div class="mb-3">
      <label class="form-label text-white">Álbum ID</label>
      <input type="number" name="album" class="form-control" required />
    </div>
    <div class="mb-3">
      <label class="form-label text-white">Imagen</label>
      <input type="file" name="imagen" class="form-control" />
    </div>
    <div class="mb-3">
      <label class="form-label text-white">Archivo MP3</label>
      <input type="file" name="archivo" class="form-control" />
    </div>
    <button class="btn btn-primary">Actualizar (PUT)</button>
  </form>

  <!-- PATCH -->
  <form id="form-patch-cancion" enctype="multipart/form-data" class="mt-3">
    <h4 class="text-white">Actualizar Canción (PATCH)</h4>
    <div class="mb-3">
      <label class="form-label text-white">ID</label>
      <input
        type="number"
        id="patch-cancion-id"
        class="form-control"
        required
      />
    </div>
    <div class="mb-3">
      <label class="form-label text-white">Nombre</label>
      <input type="text" name="nombre" class="form-control" />
    </div>
    <div class="mb-3">
      <label class="form-label text-white">Álbum ID</label>
      <input type="number" name="album" class="form-control" />
    </div>
    <div class="mb-3">
      <label class="form-label text-white">Imagen</label>
      <input type="file" name="imagen" class="form-control" />
    </div>
    <div class="mb-3">
      <label class="form-label text-white">Archivo MP3</label>
      <input type="file" name="archivo" class="form-control" />
    </div>
    <button class="btn btn-warning">Actualizar (PATCH)</button>
  </form>

  <!-- Delete -->
  <form id="form-delete-cancion" class="mt-3">
    <h4 class="text-white">Eliminar Canción</h4>
    <div class="mb-3">
      <label class="form-label text-white">ID</label>
      <input
        type="number"
        id="delete-cancion-id"
        class="form-control"
        required
      />
    </div>
    <button class="btn btn-danger">Eliminar</button>
  </form>

  <!-- Search -->
  <form id="form-search-cancion" class="mt-3">
    <h4 class="text-white">Buscar Canción</h4>
    <div class="mb-3">
      <label class="form-label text-white">Nombre</label>
      <input type="text" name="nombre" class="form-control" />
    </div>
    <div class="mb-3">
      <label class="form-label text-white">Álbum ID</label>
      <input type="number" name="album" class="form-control" />
    </div>
    <button class="btn btn-info">Buscar</button>
  </form>

  <div id="resultado" class="mt-3 text-white"></div>
</div>

<script>
  const resultado = document.getElementById("resultado");
  const showResult = async (res) => {
    try {
      const data = await res.json();
      resultado.innerText = JSON.stringify(data, null, 2);
    } catch {
      resultado.innerText = await res.text();
    }
  };

  // Insert
  document
    .getElementById("form-insert-cancion")
    .addEventListener("submit", async (e) => {
      e.preventDefault();
      const fd = new FormData(e.target);
      const res = await fetch("/canciones", { method: "POST", body: fd });
      showResult(res);
    });

  // PUT
  document
    .getElementById("form-put-cancion")
    .addEventListener("submit", async (e) => {
      e.preventDefault();
      const id = document.getElementById("put-cancion-id").value;
      const fd = new FormData(e.target);
      fd.delete("id"); // id solo va en URL
      const res = await fetch("/canciones/" + id, { method: "PUT", body: fd });
      showResult(res);
    });

  // PATCH
  document
    .getElementById("form-patch-cancion")
    .addEventListener("submit", async (e) => {
      e.preventDefault();
      const id = document.getElementById("patch-cancion-id").value;
      const fd = new FormData(e.target);
      fd.delete("id"); // id solo va en URL
      const res = await fetch("/canciones/" + id, {
        method: "PATCH",
        body: fd,
      });
      showResult(res);
    });

  // DELETE
  document
    .getElementById("form-delete-cancion")
    .addEventListener("submit", async (e) => {
      e.preventDefault();
      const id = document.getElementById("delete-cancion-id").value;
      const res = await fetch("/canciones/" + id, { method: "DELETE" });
      showResult(res);
    });

  // SEARCH
  document
    .getElementById("form-search-cancion")
    .addEventListener("submit", async (e) => {
      e.preventDefault();
      const body = {
        nombre: e.target.nombre.value,
        album: e.target.album.value || undefined,
      };
      const res = await fetch("/canciones/search", {
        method: "POST",
        headers: { "Content-Type": "application/json" },
        body: JSON.stringify(body),
      });
      showResult(res);
    });
</script>

<%- include('../partials/footer') %>
